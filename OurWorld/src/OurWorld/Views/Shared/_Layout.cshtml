<!DOCTYPE html>
<html>
<head>
    <title>Our World</title>
    <meta charset="utf-8"/>

    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link type="text/css" href="~/lib/bootswatch/yeti/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div id="sidebar">
    <img src="~/img/IsBetter.jpg" alt="headshot" class="headshot"/>
    <span id="username">Sam Hastings</span>
    <ul class="nav">
        <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
        <li><a asp-controller="App" asp-action="About">About</a></li>
        <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
    </ul>
</div>

<div id="wrapper">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <button id="sideBarToggleButton" class="btn btn-primary">
                        <i class="fa fa-angle-left"></i>
                    </button>
                </li>
            </ul>
            <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-save"></i>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-sm btn-info">
                        <i class="fa fa-print"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="main" class="container-fluid">
        <div>
            @RenderBody()
        </div>
    </div>
    <div id="footer" class="conainer-fluid">
        <div class="navbar navbar-inverse navbar-fixed-bottom">
            <h4 class="text-center text-info">&copy; This site is mine!</h4>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="~/js/site.js"></script>
@RenderSection("scripts", false)

</body>

</html>